<li>
  <span class="content"><%= review.rating %></span>
  <span class="content"><%= review.review %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(review.created_at) %> ago.
  </span>
  <% if current_user == review.user %>
    <%= link_to "削除", review, method: :delete,
                                     data: { confirm: "削除しますか？" },
                                     title: review.review %>
  <% end %>
</li>