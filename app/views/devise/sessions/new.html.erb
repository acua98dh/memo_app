<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<%= form_for(:session, url: user_session_path) do |f| %>
<div class="row">
  <div class="col-lg-6 offset-lg-3">

    <div class="form-group">
      <%= f.label :email, class: "col-form-label" %>
      <%= f.text_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "col-form-label" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign in", class: "btn btn-lg btn-primary" %>
    </div>
 
    <p>New user? <%= link_to "新規登録", new_user_registration_path %></p>
  </div>
</div>