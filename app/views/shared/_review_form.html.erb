
<%= form_for(@review) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label "名前" %>
    <%= f.text_field :name,class: "form-control" %>
  </div>

  <div class="form-group" id="star">
    <%= f.label :rating %><br>
    <%= f.hidden_field :rating, id: "review-rating",class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label "タグ" %><br>
    <input type="text" name="tag_name" data-role="tagsinput" class="form-control"></textarea>
  </div>

  <div class="form-group">
    <%= f.label "メモ" %>
    <%= f.text_area :review, placeholder:"125文字以内",class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "頻度" %>
    <%= f.select :freq, [["いつでも", "every time"], ["毎日", "daily"], ["週一", "weekly"],["月一", "monthly"],["年一", "yearly"]],class: "form-control" %>
  </div>

  <button type="button" onclick="submit();" class="btn btn-lg btn-primary form-control">投稿</button>

<% end %>

<script>
  $('#star').raty({
    size     : 20,
    path: '/assets/',
    click: function(score, e) {
      $("#review-rating").val(score)
    }
  })
</script>

